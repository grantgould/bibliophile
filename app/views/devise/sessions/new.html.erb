<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-floating mb-3">
     <%= f.text_field :login, autofocus: true, autocomplete: "email", id: "usernameInput", class: "form-control", placeholder: "email@example.com" %>
     <%= f.label "username or email", for: "usernameInput" %>
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :password, autofocus: true, autocomplete: "current-password", id: "passwordInput", class: "form-control", placeholder: "password" %>
    <%= f.label :password, for: "passwordInput" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="d-grid gap-2">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
