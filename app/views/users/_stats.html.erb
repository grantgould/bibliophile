<div class="row justify-content-start">
  <div class="col-3">
    <h5><strong><%= user.follows.count %></strong> Following</h5>
  </div>
  <div class="col">
    <h5><strong><%= user.follows.count %></strong> Followers</h5>
  </div>

  <div class="col">
   <% if user_signed_in? && current_user.follows?(user) %>
        <%= render "unfollow", user: user %>
    <% else %>
        <%= render "follow", user: user %>
    <% end %>
  </div>
</div>